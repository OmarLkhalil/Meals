<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.restaurantapp.ui.home.HomeFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >

        <action
            android:id="@+id/action_mainFragment_to_searchFragment"
            app:destination="@id/searchFragment" />

        <action
            android:id="@+id/action_mainFragment_to_detailsFragment"
            app:destination="@id/detailsMealsFragment"
            app:popUpToInclusive="true"/>

    </fragment>


    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.restaurantapp.ui.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >

        <action
            android:id="@+id/action_searchFragment_to_detailsFragment"
            app:destination="@id/detailsMealsFragment"
            app:popUpToInclusive="true"/>

    </fragment>

    <fragment
        android:id="@+id/detailsMealsFragment"
        android:name="com.example.restaurantapp.ui.detailsmeal.DetailsMealsFragment"
        tools:layout="@layout/fragment_meals_details"
        >
        <argument
            android:name="mealId"
            app:argType="string"
            android:defaultValue="1"
            />
    </fragment>
</navigation>